{% include 'partials/header-dashboard.liquid' %}

<section>
  <div class="container">
    <div class="bar">
      <div class="row">
        <div class="twelve columns">
          <h4 class="title"><span style="padding-right:15px">Billing</span></h4>
        </div>
      </div>

      <div class="row">
        <section class="pricing" id="pricing">
          <div class="container">
            <div class="row">
              <div class="columns">
                <p>Pricing is based on the number of email you validate irrespective of the number of users in your account.</p>
                <p>An validation credit is something that how much email you clean. 1 credit equals to 1 validation</p>
              </div>
            </div>

            {% if data.pricingPlan == 'custom' %}
              <div class="row price">
                <p>You are on customized plan please enter how much credits you need.</p>
                <form action="/billing/add-credit?credit-plan=dev" >
                  <input type="number" name="credit-quantity" />
                  <input type="submit" value="Add Credit"/>
                </form>
              </div>
            {% endif %}
            {% if data.pricingPlan == 'default' %}
              <div class="row price">
                <div class="three columns">
                  <div>
                    <h4>Dev</h4>
                    <p>10k validation</p>
                    <h1>$10</h1>
                    <p><a href="/billing/add-credit?credit-plan=dev" class="button button-primary">Add Credit</a></p>
                  </div>
                </div>
                <div class="three columns">
                  <div>
                    <h4>Pro</h4>
                    <p>100k validation</p>
                    <h1>$90</h1>
                    <p><a href="/billing/add-credit?credit-plan=pro" class="button button-primary">Add Credit</a></p>
                  </div>
                </div>
                <div class="three columns">
                  <div>
                    <h4>Biz</h4>
                    <p>1M validation</p>
                    <h1>$800</h1>
                    <p><a href="/billing/add-credit?credit-plan=biz" class="button button-primary">Add Credit</a></p>
                  </div>
                </div>
                <div class="three columns">
                  <div>
                    <p><strong>More?</strong></p>
                    <p><a href="http://github.com/owlverify/owlverify-frontend">Download</a> and self-host<br>or <a href="mailto:hello@owlhub.io">get in touch</a></p>
                  </div>
                </div>
              </div>
            {% endif %}
          </div>
        </section>
      </div>
    </div>
  </div>
</section>

{% include 'partials/footer.liquid' %}
